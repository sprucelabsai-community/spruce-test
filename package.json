{
	"name": "@sprucelabs/test",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "2.2.0",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "Testing made ðŸ”¥ðŸ”¥ðŸ”¥ in the Spruce Experience Platform",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-test",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-test/issues"
	},
	"scripts": {
		"build": "npm run clean && tsc",
		"watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run build'",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint:fix": "eslint --fix '**/*.ts'",
		"test": "jest",
		"test:watch": "jest --watch",
		"release": "semantic-release",
		"local": "node --inspect=5200 ./build/index.js"
	},
	"devDependencies": {
		"@sprucelabs/semantic-release": "^3.0.4",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.0.2",
		"eslint": "^5",
		"eslint-config-spruce": "^10.2.0",
		"prettier": "^1.19",
		"ts-node": "^8.8.1",
		"typescript": "^3.8"
	},
	"dependencies": {
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.5",
		"@types/chai": "^4.2.11",
		"@types/faker": "^4.1.11",
		"@types/jest": "^25.2.1",
		"babel-jest": "^25.4.0",
		"chai": "^4.2.0",
		"faker": "^4.1.0",
		"jest": "^25.4.0",
		"ts-expect": "^1.1.0",
		"ts-jest": "^25.4.0"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			],
			"@babel/preset-typescript"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/build/",
			"<rootDir>/node_modules/"
		]
	}
}
