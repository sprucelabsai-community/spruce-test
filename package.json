{
  "name": "@sprucelabs/test",
  "publishConfig": {
    "access": "public"
  },
  "version": "7.7.84",
  "skill": {
    "namespace": "spruce-test",
    "upgradeIgnoreList": [
      "@sprucelabs/resolve-path-aliases",
      "@sprucelabs/spruce-test-fixtures",
      "@types/node",
      "chokidar-cli",
      "concurrently",
      "ts-node"
    ]
  },
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "description": "T.D.D by the 3 Laws in the Spruce Experience Platform. ðŸ›¡",
  "keywords": [
    "node",
    "components",
    "sprucebot",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/spruce-test",
  "bugs": {
    "url": "https://github.com/sprucelabsai/spruce-test/issues"
  },
  "scripts": {
    "build.ci": "yarn build.tsc",
    "build.copy-files": "true",
    "build.dev": "yarn build.tsc --sourceMap",
    "build.dist": "yarn build.tsc && tsc --project tsconfig.dist.json && yarn build.esm-postbuild",
    "build.esm-postbuild": "esm-postbuild --target build/esm --patterns '**/*.js'",
    "build.resolve-paths": "true",
    "build.tsc": "tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "local": "node --inspect=5200 ./build/index.js",
    "post.watch.build": "true",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "true",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tests": "jest --watch",
    "watch.tsc": "tsc -w"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "deep-equal": "^2.0.5",
    "jest": "^27.2.4",
    "lodash": "^4.17.21",
    "ts-expect": "^1.3.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "variable-diff": "^2.0.2"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^1.0.142",
    "@sprucelabs/semantic-release": "^4.0.7",
    "@types/deep-equal": "^1.0.1",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.175",
    "eslint": "^7.32.0",
    "eslint-config-spruce": "^10.10.12",
    "prettier": "^2.4.1",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.11.0",
    "yarn-upgrade-all": "^0.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "yarn-upgrade-all": {
    "ignore": [
      "@sprucelabs/esm-postbuild",
      "sprucelabs/semantic-release",
      "eslint-config-spruce"
    ]
  }
}
