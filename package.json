{
	"name": "@sprucelabs/test",
	"publishConfig": {
		"access": "public"
	},
	"version": "7.6.19",
	"files": [
		"build"
	],
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"exports": {
		".": {
			"node": "./build/index.js",
			"require": "./build/index.js",
			"import": "./build/esm/index.js",
			"default": "./build/esm/index.js"
		}
	},
	"module": "./build/esm/index.js",
	"description": "T.D.D by the 3 Laws in the Spruce Experience Platform. ðŸ›¡",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-test",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-test/issues"
	},
	"scripts": {
		"build": "yarn build.tsc && yarn build.dist",
		"build.dist": "tsc --project tsconfig.dist.json",
		"build.tsc": "tsc",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"local": "node --inspect=5200 ./build/index.js",
		"fix.lint": "eslint --fix '**/*.ts'",
		"rebuild": "yarn clean && rm -rf node_modules && yarn && yarn build.tsc",
		"release": "semantic-release",
		"test": "jest",
		"upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn lint.fix | true",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test",
		"watch.build": "yarn build.tsc -w",
		"watch.tests": "jest --watch"
	},
	"dependencies": {
		"@babel/core": "^7.13.1",
		"@babel/preset-env": "^7.13.5",
		"@types/jest": "^26.0.20",
		"babel-jest": "^26.6.3",
		"chalk": "^4.1.0",
		"deep-equal": "^2.0.5",
		"jest": "^26.6.3",
		"lodash": "^4.17.21",
		"ts-expect": "^1.3.0",
		"ts-jest": "^26.5.2",
		"typescript": "^4.2.2",
		"variable-diff": "^2.0.2"
	},
	"devDependencies": {
		"@sprucelabs/semantic-release": "^4.0.6",
		"@types/deep-equal": "^1.0.1",
		"@types/lodash": "^4.14.168",
		"concurrently": "^6.0.0",
		"eslint": "^7.20.0",
		"eslint-config-spruce": "latest",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1",
		"yarn-upgrade-all": "^0.5.4"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			],
			"@babel/preset-typescript"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/build/",
			"<rootDir>/node_modules/"
		]
	},
	"yarn-upgrade-all": {
		"ignore": [
			"sprucelabs/semantic-release",
			"eslint-config-spruce"
		]
	}
}
