{
	"name": "@sprucelabs/test",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "6.0.1",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "Testing made ðŸ”¥ðŸ”¥ðŸ”¥ in the Spruce Experience Platform",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-test",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-test/issues"
	},
	"scripts": {
		"build": "npm run clean && tsc",
		"build.watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run build'",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"test": "jest",
		"test.watch": "jest --watch",
		"release": "semantic-release",
		"local": "node --inspect=5200 ./build/index.js",
		"arkit": "arkit -f src/index.ts -o docs/images/arkit.svg",
		"upgrade.packages": "yarn upgrade --latest && rm yarn.lock | true && yarn | true && yarn lint.fix | true",
		"upgrade.packages.all": "yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test"
	},
	"devDependencies": {
		"@sprucelabs/semantic-release": "^4.0.4",
		"@types/deep-equal": "^1.0.1",
		"@types/lodash": "^4.14.159",
		"arkit": "^1.6.4",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.3.0",
		"eslint": "^7.6.0",
		"eslint-config-spruce": "^10.8.9",
		"prettier": "^2.0.5",
		"ts-node": "^8.8.1",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"@babel/core": "^7.11.1",
		"@babel/preset-env": "^7.11.0",
		"@types/jest": "^26.0.9",
		"babel-jest": "^26.3.0",
		"deep-equal": "^2.0.3",
		"jest": "^26.4.0",
		"lodash": "^4.17.20",
		"ts-expect": "^1.1.0",
		"ts-jest": "^26.2.0"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			],
			"@babel/preset-typescript"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/build/",
			"<rootDir>/node_modules/"
		]
	}
}
