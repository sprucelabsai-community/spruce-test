{
  "name": "@sprucelabs/test",
  "publishConfig": {
    "access": "public"
  },
  "version": "9.0.14",
  "skill": {
    "namespace": "spruce-test",
    "upgradeIgnoreList": [
      "@sprucelabs/esm-postbuild",
      "@sprucelabs/resolve-path-aliases",
      "@sprucelabs/spruce-test-fixtures",
      "@types/node",
      "chalk",
      "chokidar-cli",
      "ts-jest",
      "ts-node"
    ]
  },
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "description": "T.D.D by the 3 Laws in the Spruce Experience Platform. ðŸ›¡",
  "keywords": [
    "node",
    "components",
    "sprucebot",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/spruce-test",
  "bugs": {
    "url": "https://github.com/sprucelabsai/spruce-test/issues"
  },
  "scripts": {
    "build.ci": "yarn build.tsc && yarn lint",
    "build.copy-files": "true",
    "build.dev": "yarn build.tsc --sourceMap",
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "true",
    "build.tsc": "tsc",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "local": "node --inspect=5200 ./build/index.js",
    "post.watch.build": "true",
    "rebuild": "yarn run clean.all && yarn install && yarn run build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn run build.resolve-paths ; yarn run lint",
    "test": "jest",
    "update.dependencies": "yarn run clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run post.watch.build'",
    "watch.rebuild": "yarn run clean.all && yarn install && yarn run watch.build.dev",
    "watch.tests": "jest --watch",
    "watch.tsc": "tsc -w"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "deep-equal": "^2.2.3",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "ts-expect": "^1.3.0",
    "ts-jest": "next",
    "typescript": "^5.4.5",
    "variable-diff": "^2.0.2"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^5.0.163",
    "@sprucelabs/semantic-release": "^5.0.1",
    "@types/deep-equal": "^1.0.4",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.3",
    "eslint": "^9.2.0",
    "eslint-config-spruce": "^11.2.18",
    "prettier": "^3.2.5",
    "tsc-watch": "^6.2.0",
    "tsconfig-paths": "^4.2.0",
    "yarn-upgrade-all": "^0.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "yarn-upgrade-all": {
    "ignore": []
  }
}
